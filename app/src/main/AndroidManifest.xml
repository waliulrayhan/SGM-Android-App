        android:supportsRtl="true"
        android:theme="@style/Theme.SGMAndroid"
        tools:targetApi="31">
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.SGMAndroid.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddCommentActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.SGMAndroid.NoActionBar" />
        <activity
            android:name=".PredictionActivity"
            android:exported="false"
            android:parentActivityName=".SettingsActivity" />
        <activity
            android:name=".GraphActivity"
            android:exported="false"
            android:parentActivityName=".SettingsActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".DistributorDetailsActivity"
            android:exported="false"
            android:parentActivityName=".DistributorListActivity" />
        <activity
            android:name=".PowerPlantDetailsActivity"
            android:exported="false"
